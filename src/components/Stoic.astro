---
let stoicQuote;
let stoicAuthor;

const response = await fetch("https://stoic-quotes.com/api/quote");
const data = await response.json();

stoicQuote = data.text;
stoicAuthor = data.author;
---

<footer class="flex flex-col py-1">
  <p class="text-left w-full">{stoicQuote}</p>
  <p class="text-right font-semibold mt-1">by {stoicAuthor}</p>
</footer>
